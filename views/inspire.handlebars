          <p class="title">Song</p>
          {{!-- {{#each filtered}} --}}
          <h4>{{filtered.title}}</h4><span><audio controls src={{filtered.preview}} type="audio/mp3"></audio></span>
          {{!-- {{/each}} --}}
        </div>
        <div class="tile is-child box">
          <p class="title">References</p>
          <a href="https://www.bible.com/" target=" ">The Bible Website</a>
        </div>
      </div>
      <div class="container2">
      <div class="tile is-parent">
        <div class="tile is-child box">
          <p class="title">Lyrics</p>
            {{filtered.song_lyric}}
        </div>
      </div>
    </div>
